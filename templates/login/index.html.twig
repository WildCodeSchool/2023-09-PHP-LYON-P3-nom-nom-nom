{% extends 'base.html.twig' %}

{% block body %}
	{# --------------------------fond mobile--------------------------------- #}
	<div class="bg-image h-100 d-md-none" style="background-image: url('build/images/fond_login.png');">
		<div class="bg-fond h-100">
			{% if error %}
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<div class="d-flex flex-column align-items-center vh-100">
				<img src="/build/images/nomnomlogo.png" alt="logo de nomnomnom" class="logo-add mt-5"/>
				<form action="{{ path('app_login') }}" method="post">
					<div>
						<label class="textaccount mt-2" for="pseudo">Nom d'utilisateur</label>
						<input class="form-control" type="text" id="pseudo" name="_username" value="{{ last_username }}"/>
					</div>
					<div>
						<label class="textaccount mt-2" for="password">Mot de passe</label>
						<input class="form-control" type="password" id="password" name="_password"/>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div>
						<a class="noaccount link-underline link-underline-opacity-0" href="{{ path('app_register') }}">Pas de compte? Inscrivez-vous ici</a>
					</div>
					<div class="d-flex justify-content-center">
						<button class="container btn button-crud mt-3" type="submit">Se connecter</button>
					</div>
					{% if app.user %}
						<div class="d-flex justify-content-center">
							<a href="{{path('app_logout')}}" type="button" class="btn button-crud mt-4 mb-3" tabindex="-1" role="button" aria-disabled="true">Deconnexion</a>
						</div>
					{% endif %}
				</form>
			</div>
		</div>
	</div>

	{# ----------------------------fond desktop----------------------------- #}
	<div class="container-fluid d-none d-md-block p-0 m-0">
		<div class="row row-cols">
			<img src="/build/images/photo_register.jpg" alt="photo d'un plat" class="object-fit-cover back-picture col-md-5 p-0"/>
			<div class="col-md-7 p-0 ">
				<div class="bg-desktop-login bg-image h-100 w-100" style="background-image: url('/build/images/background_login.png');">
					{% if error %}
						<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					<div class="d-flex h-75 flex-column align-items-center justify-content-md-evenly">
						<img src="/build/images/logo_white_500.png" alt="logo de nomnomnom" class="logo-add "/>
						<form class="w-50" action="{{ path('app_login') }}" method="post">
							<div>
								<label class="textaccount mt-3" for="pseudo">Nom d'utilisateur</label>
								<input class="form-control" type="text" id="pseudo" name="_username" value="{{ last_username }}"/>
							</div>
							<div>
								<label class="textaccount mt-3" for="password">Mot de passe</label>
								<input class="form-control" type="password" id="password" name="_password"/>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="d-flex justify-content-end">
								<a class="noaccount link-underline link-underline-opacity-0 " href="#">Pas de compte? Inscrivez-vous ici</a>
							</div>
							<div class="d-flex justify-content-center">
								<button class="btn button-crud mt-3" type="submit">Se connecter</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
