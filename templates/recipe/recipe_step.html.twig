{% extends 'base.html.twig' %}

{% block title %}Steps recipe
{% endblock %}

{% block body %}
	<h1>Les étapes de la recette</h1>

	<div>
		{% for step in recipe.steps %}
			<h2>
				Etape
				{{ step.stepNumber }}</h2>
			<p>{{ step.description }}</p>
		{% endfor %}
	</div>

	<a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">Retour à la recette</a>

	{{ include('step/_delete_form.html.twig') }}

{% endblock %}
