{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>NameRecipe</th>
                <td>{{ recipe.nameRecipe }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Calorie</th>
                <td>{{ recipe.calorie }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ recipe.date ? recipe.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>CookingTime</th>
                <td>{{ recipe.cookingTime }}</td>
            </tr>
            <tr>
                <th>PrepareTime</th>
                <td>{{ recipe.prepareTime }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recipe_index') }}">back to list</a>

    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
