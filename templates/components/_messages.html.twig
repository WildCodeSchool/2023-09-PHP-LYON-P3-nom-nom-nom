{% for recipe, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ recipe }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% for category, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ category }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}